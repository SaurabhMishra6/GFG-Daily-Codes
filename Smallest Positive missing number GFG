class Solution
{
    //Function to find the smallest positive number missing from the array.
    static int missingNumber(int arr[], int size)
    {
        Arrays.sort(arr);
        int i= 0;
        int temp = 1;
        
        while(i < size){
            if(arr[i] > temp) return temp;
        else if(arr[i]== temp){
            temp++;
        }
           i++;
        }
        return temp;
    }
}
